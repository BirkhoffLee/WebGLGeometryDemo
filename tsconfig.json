{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./js",
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es6",
    "inlineSourceMap": true,
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ],
    "esModuleInterop": true
  },
  "include": [
    "scripts/*.ts"
  ]
}
